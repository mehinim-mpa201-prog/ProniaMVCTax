
@{
    ViewData["Title"] = "Update";
}


@model ProductUpdateVM


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Product</h4>
            <p class="card-description">

            </p>
            <form method="post" asp-controller="Product" asp-action="Update" class="forms-sample" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputDescription1">Description</label>
                    <input asp-for="Description" class="form-control" id="exampleInputShortDescription1" placeholder="Description">
                </div>
                <div class="form-group">
                    <label for="exampleInputMainImage1">Main Image </label>
                    <input asp-for="MainImage" class="form-control" id="exampleInputMainImage1" placeholder="Main Image ">
                </div>
                <div class="form-group">
                    <label for="exampleInputHoverImage1">Hover Image </label>
                    <input asp-for="HoverImage" class="form-control" id="exampleInputHoverImageP" placeholder="Hover Image ">
                </div>
                <div class="form-group">
                    <label for="examplePrice1">Price</label>
                    <input asp-for="Price" class="form-control" id="exampleInputPrice1" placeholder="Price">
                </div>
                <div class="form-group">
                    <label for="exampleSKU1">SKU</label>
                    <input asp-for="SKU" class="form-control" id="exampleInputSKU1" placeholder="SKU">
                </div>
                <div class="form-group">
                    <label for="exampleStar1">Star</label>
                    <input asp-for="Star" class="form-control" id="exampleInputStar1" placeholder="Star">
                </div>
                <div class="form-group">
                    <label for="exampleCategoryId">Category</label>
                    <select asp-for="CategoryId" class="form-control" id="exampleCategoryId">

                        <option selected disabled>Category seç</option>
                        @foreach (Category category in ViewBag.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="exampleBrandId">Brand</label>
                    <select asp-for="BrandId" class="form-control" id="exampleBrandId">

                        <option selected disabled>Brand seç</option>
                        @foreach (Brand brand in ViewBag.Brands)
                        {
                            <option value="@brand.Id">@brand.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label>Tags</label>
                    <select asp-for="TagIds" class="form-control" multiple>
                        @foreach (Tag tag in ViewBag.Tags)
                        {
                            <option value="@tag.Id">@tag.Name</option>
                        }
                    </select>
                </div>


                <div style="color:red" asp-validation-summary="All" class="alert-danger"></div>
                <button type="submit" class="btn btn-warning me-2">Update</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>


